<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/citiesListFragment">

    <fragment
        android:id="@+id/citiesListFragment"
        android:name="com.example.weather.views.fragments.CitiesListFragment"
        android:label="fragment_cities_list"
        tools:layout="@layout/fragment_cities_list" >
        <action
            android:id="@+id/action_AddCity"
            app:destination="@id/addCityFragment"
            app:popUpToInclusive="false">
        </action>
        <argument
            android:name="newCityNameArg"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_DetailsForCity"
            app:destination="@id/detailedWeatherForCityFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCityFragment"
        android:name="com.example.weather.views.fragments.AddCityFragment"
        android:label="fragment_add_city"
        tools:layout="@layout/fragment_add_city" >
        <action
            android:id="@+id/action_FromAddCityToCitiesList"
            app:destination="@id/citiesListFragment"
            app:popUpTo="@id/citiesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailedWeatherForCityFragment"
        android:name="com.example.weather.views.fragments.DetailedWeatherForCityFragment"
        android:label="fragment_detailed_weather_for_city"
        tools:layout="@layout/fragment_detailed_weather_for_city" >
        <action
            android:id="@+id/action_FromDetailedWeatherToCitiesList"
            app:destination="@id/citiesListFragment"
            app:popUpTo="@id/citiesListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="cityName"
            app:argType="string" />
        <argument
            android:name="countryCode"
            app:argType="string" />
        <argument
            android:name="weatherForCity"
            app:argType="com.example.weather.models.current_weather_model.WeatherModel" />
    </fragment>
</navigation>